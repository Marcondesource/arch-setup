# Fonte do I3
font pango:monospace 8

# Variáveis do i3wm
set $mod Mod4
set $TERM xfce4-terminal
set $BROWSER firefox
set $FILE_MANAGER thunar
set $MENU "rofi -modi drun,run -show drun -show-icons"

# Usando as variáveis
bindsym $mod+t exec $TERM
bindsym $mod+f exec $BROWSER
bindsym $mod+a exec $MENU

# Mudar posição das Janelas
bindsym $mod+h move left
bindsym $mod+j move down
bindsym $mod+k move up
bindsym $mod+l move right

# I3-WM
bindsym $mod+w fullscreen
bindsym $mod+Shift+r restart 
bindsym $mod+x kill
bindsym $mod+i layout tabbed; exec notify-send "i3" "Modo Tabbed"
bindsym $mod+s layout stacking; exec notify-send "i3" "Modo Stacking"
bindsym $mod+e layout default; exec notify-send "i3" "Modo Tiling"

# Areas de trabalho
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# mudar areas de trabalho
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# Execução de programas
exec --no-startup-id xset s off -dpms
exec --no-startup-id ueberzug
exec --no-startup-id nitrogen --restore &
exec --no-startup-id dunst
exec --no-startup-id picom -b
#exec --no-startup-id stalonetray
exec --no-startup-id sleep 3 && /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec_always --no-startup-id pkill polybar; polybar example & 
bindsym $mod+p exec --no-startup-id $HOME/.config/polybar/plugins/Rofi-Powermenu/powermenu.sh

# Outras Configs
new_window none 
new_float none 
exec --no-startup-id xset s off -dpms

#Screenshot
bindsym Print exec --no-startup-id flameshot gui
bindsym $mod+Print exec mkdir -p ~/Imagens/Capturas && flameshot full -p ~/Imagens/Capturas

#Atalho para controle de volume no teclado abnt2:
bindsym $mod+F11 exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym $mod+F12 exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym $mod+m exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
exec --no-startup-id redshift -l -23.5:-46.6 -t 5500:4000

